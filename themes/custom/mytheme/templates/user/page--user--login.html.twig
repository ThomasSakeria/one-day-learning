<div class="page-wrapper">
  {# Include header without search #}
  {% include '@mytheme/layout/header.html.twig' with {'hide_search': true} %}

  {# Main content #}
  <main class="main-content">
    <div class="custom-login-page">
      <div class="login-container">
        <div class="login-header">
          <h1>Welcome Back</h1>
          <div class="login-header-links">
            <a href="{{ url('<front>') }}user/register">Create New Account</a>
            <a href="{{ url('<front>') }}user/password">Reset Password</a>
          </div>
        </div>
        <div class="login-form-wrapper">
          {{ page.content }}
        </div>
      </div>
    </div>
  </main>

  {# Include footer #}
  {% include '@mytheme/layout/footer.html.twig' %}
</div> 