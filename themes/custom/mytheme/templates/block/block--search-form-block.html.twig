{#
/**
 * @file
 * Theme override for the search form block.
 *
 * Available variables:
 * - plugin_id: The ID of the block implementation.
 * - label: The configured label of the block if visible.
 * - configuration: A list of the block's configuration values.
 * - content: The content of this block.
 * - attributes: A list HTML attributes for the wrapper element.
 * - title_attributes: Same as attributes, except applied to the main title tag.
 * - title_prefix: Additional output populated by modules, intended to be
 *   displayed in front of the main title tag.
 * - title_suffix: Additional output populated by modules, intended to be
 *   displayed after the main title tag.
 */
#}
<!-- Debug: Search form block template is being rendered -->
{%
  set classes = [
    'block',
    'block-search',
    'search-form-wrapper',
  ]
%}
<div{{ attributes.addClass(classes) }}>
  {{ title_prefix }}
  {% if label %}
    <h2{{ title_attributes.addClass('search-form-title') }}>{{ label }}</h2>
  {% endif %}
  {{ title_suffix }}
  {% block content %}
    <div{{ content_attributes.addClass('search-form-content') }}>
      {{ content }}
    </div>
  {% endblock %}
</div> 